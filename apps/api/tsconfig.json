{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"types": ["vitest/globals"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@db": ["src/db/database.ts"],
			"@module/*": ["src/modules/*"]
		}
	},
	"include": ["src/**/*.ts", "vite.setup.ts"],
	"exclude": ["node_modules", ".turbo"]
}
