{
	"name": "api",
	"version": "1.0.0",
	"scripts": {
		"build": "tsc --build",
		"check-types": "tsc --noEmit",
		"clean": "rm -rf dist",
		"db:generate": "kysely-codegen",
		"db:migrate": "pnpm db:migration-links && tsx src/db/migrator.ts up",
		"db:migrate:rollback": "tsx src/db/migrator.ts down",
		"db:migrate:create": "pnpm exec sh scripts/migration-create.sh",
		"db:migration-links": "pnpm exec sh scripts/migration-links.sh",
		"dev": "ts-node-dev src/app.ts",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"author": "Nick Fuller",
	"license": "MIT",
	"packageManager": "pnpm@10.12.4",
	"devDependencies": {
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/node": "^24.0.10",
		"@types/pg": "^8.15.4",
		"dotenv": "^17.0.1",
		"kysely-codegen": "^0.18.5",
		"ts-node-dev": "^2.0.0",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"express": "^5.1.0",
		"kysely": "^0.28.2",
		"pg": "^8.16.3",
		"zod": "^3.25.71"
	},
	"engines": {
		"node": ">=24"
	}
}
