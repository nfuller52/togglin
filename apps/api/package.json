{
  "name": "api",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc --build",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate-schema": "tsx scripts/generate-structure-sql.ts",
    "db:generate-types": "kysely-codegen",
    "db:migrate:create": "pnpm exec sh scripts/migration-create.sh",
    "db:migrate:rollback": "tsx src/db/migrator.ts down && pnpm db:generate-types",
    "db:migrate": "pnpm db:migration-links && tsx src/db/migrator.ts up && pnpm db:generate-types && pnpm db:generate-schema",
    "db:migration-links": "pnpm exec sh scripts/migration-links.sh",
    "dev": "NODE_ENV=local ts-node-dev -r tsconfig-paths/register src/index.ts",
    "format:write": "prettier . --write",
    "format": "prettier . --check",
    "lint": "eslint . --cache",
    "test:db:setup": "tsx scripts/db-test-setup.ts",
    "test:watch": "vitest",
    "test": "vitest run"
  },
  "author": "Nick Fuller",
  "license": "MIT",
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.10",
    "@types/pg": "^8.15.4",
    "dotenv": "^17.0.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "kysely-codegen": "^0.18.5",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "kysely": "^0.28.2",
    "pg": "^8.16.3",
    "zod": "^3.25.71"
  },
  "engines": {
    "node": ">=24"
  }
}
